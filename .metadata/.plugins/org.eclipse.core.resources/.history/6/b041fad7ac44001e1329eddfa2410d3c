window.addEventListener( "load",   function(){
	
	
	
	  let btn = document.querySelector("#hi");
	  alert( btn);
	  let name  = document.querySelector("#name").value;
	  alert( name);
	  
	  btn.addEventListener("click", function(){
		 // alert("hi");
		 window.location.href="/mvc/hi?name=" + name;
	  })
	
} );